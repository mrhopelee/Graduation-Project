doctype html
html(lang="en")
    head
        - var name = '管理'
        title= name
        - var allpi = pi
        meta(charset="utf-8")
        link(rel="stylesheet", type="text/css" href="/stylesheets/normalize.v3.0.3.css ")
        link(rel="stylesheet", type="text/css" href="/stylesheets/style.css")
        link(rel="stylesheet", type="text/css" href="/stylesheets/tanchuceng.css")
        script(src="/javascripts/jquery-2.2.1.js")
        script(src="/javascripts/angular-1.5.2.js")
        script.


    body
        div.all
            header.sitetitle
                a(href="http://localhost:27017/manager.html")
                    span myphoto
            div.left
                div.creclass
                    button.newclassbtn.abscenter new class
                    div.hidnewclass.abscenter
                            input(type="text" required).creclassname
                            button.creclassbtn 增加
                            button.hidcreclassbtn 取消
                div.showclass
                    ul.classlist
                        li.classitem.this(data-c="") 全部

            div.right
                div.crepicture
                    form(action="/file_upload" method="post" enctype="multipart/form-data").uploadform
                        input(type="hidden" value="" name='classname')
                        input(type="file" name="image" size="50").filebtn
                        input(type="submit" value="upload photo").uploadbtn
                div.showpicture.btcf
                    - for (var x=0; x < allpi.length; x++)
                        div.showitem.btcf
                            div.showimg
                                img(src="images/"+allpi[x].realname, alt=allpi[x].name)
                            div.showother
                                button.showbtn ···
                                div.shownamediv
                                    span.showname=allpi[x].name
                                div.btndiv
                                    button.editbtn update
                                    form(action="/image_del" method="post").delform
                                        input(type="hidden" value=allpi[x]._id name='id')
                                        button(type="submit" value="delete") delete
script(src="/javascripts/tanchuceng.js")
script(src="/javascripts/classfun.js")
script(src="/javascripts/pageinit.js")

